/**app.wxss**/
.container {
  height: 100%;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
} 
.main{
  padding: 10px;
}
.ifont{
  width: 50px;
  height:50px;
   vertical-align: middle;
   margin-right: 10px;
}
.main_list{
  padding: 10px 0;
  border-bottom: 1px solid #f5f5f5;
  display:flex;
  position: relative;
}
.item-title{
  font-size: 12px;
  color:#999;
}
.item-title-after,.item-title-after-time{
  position: absolute;
  right: 10px;
  font-size: 14px;
}
.item-title-after{
  top:10px;
  color: #f00;
}
.item-title-after-time{
  bottom: 10px;
  color:#999;
}
.item-title-col{
  font-size: 12px;
  color: #999;
  line-height: 2
}